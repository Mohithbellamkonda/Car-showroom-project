@using Microsoft.AspNetCore.Identity
@using Testing_Login.Areas.Identity.Data

@inject SignInManager<Testing_LoginUser> SignInManager
@inject UserManager<Testing_LoginUser> UserManager

<style>
    .nav-item{
        background-color: #333;
        overflow: hidden;
    }

    /* Style the links inside the navigation bar */
    .nav-item a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
    }

        /* Change the color of links on hover */
    .nav-item a:hover {
        background-color: #ddd;
        color: black;
    }

        /* Add a color to the active/current link */
    .nav-item a.active {
        background-color: #04AA6D;
        color: white;
    }
</style>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
     <li class="nav-item">
        <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
     </li>

     <li class="nav-item">
            <a class="nav-link text-primary" asp-area="" asp-controller="Buys" asp-action="Index">Shop</a>
     </li>

     <li class="nav-item">
            <a class="nav-link text-primary" asp-area="" asp-controller="Buys" asp-action="Create">Sell</a>
     </li>

     <li class="nav-item">
            <a class="nav-link text-primary" asp-area="" asp-controller="Carts" asp-action="Index">Cart</a>
     </li>
        
     <li class="nav-item">
            <a class="nav-link text-primary" asp-area="" asp-controller="Buys" asp-action="Intheauction">Your cars in the store</a>
     </li>

      <li class="nav-item">
            <a class="nav-link text-primary" asp-area="" asp-controller="Solds" asp-action="Index">Sold</a>
      </li>

      <li class="nav-item">
            <a class="nav-link text-primary" asp-area="" asp-controller="Broughts" asp-action="Index">Bought</a>
      </li>


    <li class="nav-item">
            <a id="manage" class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-primary">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
